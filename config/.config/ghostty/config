keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right

keybind = super+h=resize_split:left,100
keybind = super+j=resize_split:down,100
keybind = super+k=resize_split:up,100
keybind = super+l=resize_split:right,100

keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
